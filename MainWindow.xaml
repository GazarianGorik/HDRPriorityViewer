<Window
    x:Class="WwiseHDRTool.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WwiseHDRTool"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="WwiseHDRTool">

    <Grid x:Name="RootGrid" Padding="24" MinWidth="600" MinHeight="400" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.DataContext>
            <local:GraphViewModel />
        </Grid.DataContext>

        <!-- Déclaration des lignes -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Pour les contrôles -->
            <RowDefinition Height="*"/>    <!-- Pour le graphique -->
        </Grid.RowDefinitions>

        <!-- Section UI : boutons, textbox, etc. -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Spacing="16">

            <!-- Action buttons -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button x:Name="button_ConnectToWwise" Click="Button_ConnectToWwise" Width="150" Height="36" Content="Connect to Wwise"/>
                <Button x:Name="button_ListSoundObjectsRoutedToHDR" Click="Button_ListSoundObjectsRoutedToHDR"
                        IsEnabled="{x:Bind MainViewModel.IsButtonEnabled, Mode=OneWay}" Width="230" Height="36" Content="List sound objects routed to HDR"/>
            </StackPanel>

            <!-- Meter visualisation (optionnel si tu veux ajouter autre chose plus tard) -->
            <StackPanel x:Name="VolumeMetersPanel" Orientation="Vertical" Spacing="8" Margin="0,20,0,0"/>
        </StackPanel>

        <!-- Section graphique -->
        <lvc:CartesianChart x:Name="chart"
                            Width="600"  
                            Grid.Row="1"
                            Series="{Binding GraphViewModel.Series}"
                            ZoomMode="Y"/>
    </Grid>
</Window>
