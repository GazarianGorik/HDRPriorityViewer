<Window
    x:Class="WwiseHDRTool.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WwiseHDRTool"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="WwiseHDRTool">
    
    
    
    <Grid x:Name="RootGrid" Padding="10
          " MinWidth="800" MinHeight="500"
          Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid>
            <!-- Layout global : 1) bandeau (auto)  2) zone principale (s'étire) -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Zone principale : colonne gauche (panneau filtres), colonne droite (graph) -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <!-- panneau de filtres -->
                    <ColumnDefinition Width="12"/>
                    <!-- gouttière -->
                    <ColumnDefinition Width="*"/>
                    <!-- graphique -->
                </Grid.ColumnDefinitions>

                <!-- PANNEAU FILTRES (il s’étire en hauteur car on est en Row="1" Height="*") -->
                <Border
                    Grid.Column="0"
                    Background="#1E1E1E"
                    CornerRadius="8"
                    Padding="12"
                    BorderBrush="#333"
                    BorderThickness="1">

                    <!-- Séparer haut (titre+recherche) et bas (catégories) : Auto / * / Auto -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <!-- Titre -->
                            <RowDefinition Height="Auto"/>
                            <!-- Zone recherche -->
                            <RowDefinition Height="Auto"/>

                            <!-- Titre -->
                            <RowDefinition Height="Auto"/>
                            <!-- Catégories en bas -->
                            <RowDefinition Height="Auto"/>

                            <!-- Titre -->
                            <RowDefinition Height="Auto"/>
                            <!-- Catégories en bas -->
                            <RowDefinition Height="Auto"/>

                            <!-- espace extensible -->
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>


                        <!-- Titre -->
                        <Grid HorizontalAlignment="Stretch" Padding="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <!-- Colonne texte : prend tout l'espace dispo -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- Colonne bouton : prend juste ce qu'il faut -->
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0"
                                   HorizontalAlignment="Left"
                                   Text="Project Infos"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,8"/>
                            <Button Grid.Row="2" 
                                x:Name="ReAnalyzeButton"
                                HorizontalAlignment="Right"
                                Content="Re-analyse"
                                FontSize="12"
                                Click="AnalyzeButton_Click"
                                Width="90"
                                Height="30"/>
                        </Grid>

                        <!-- Stats overlay en haut à droite du graphique -->
                        <StackPanel Grid.Row="1" x:Name="Stats"
                                Orientation="Vertical"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,12,0,0"
                                Visibility="Collapsed">
                            <Border Background="Transparent" Padding="12" CornerRadius="8" BorderBrush="#333" BorderThickness="1" Margin="0,0,0,40">
                                <StackPanel Orientation="Vertical" Spacing="6" HorizontalAlignment="Right">
                                    <TextBlock FontSize="13" Text="{Binding WwiseVersion}" Foreground="LightGray"/>
                                    <TextBlock FontSize="13" Text="{Binding WwiseProjectName}" Foreground="LightGray"/>
                                    <TextBlock FontSize="13" Text="{Binding TotalChartPoints}" Foreground="LightGray"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Titre -->
                        <TextBlock Grid.Row="2"
                               Text="Search"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="White"
                               Margin="0,0,0,16"/>

                        <!-- RECHERCHE (en haut) -->
                        <ItemsControl Grid.Row="3"
                                  ItemsSource="{Binding SearchItems}"
                                  x:Name="SearchFields"
                                  Margin="0,0,0,40">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical" Spacing="8"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical" VerticalAlignment="Top" Spacing="4">
                                        <TextBox Width="200"
                                             Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             PlaceholderText="Search..."
                                             FontSize="13"
                                             KeyDown="SearchField_KeyDown"
                                             TextChanged="SearchField_TextChanged"
                                             GotFocus="SearchField_GotFocus"
                                             LostFocus="SehField_LostFocus"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Titre -->
                        <TextBlock Grid.Row="4"
                               Text="Filters"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="White"
                               Margin="0,0,0,8"/>

                        <StackPanel Grid.Row="5" VerticalAlignment="Top" HorizontalAlignment="Stretch" Orientation="Vertical" Margin="0,0,0,0">
                            <ItemsControl ItemsSource="{Binding CategorieFilterButtons}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Spacing="10"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Label}" Command="{Binding Command}" FontSize="14"  Foreground="{Binding Background}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- GRAPHIQUE -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- CATÉGORIES (collées en bas du panneau) -->
                    <Grid Grid.Row="1">
                        <lvc:CartesianChart x:Name="Chart"
                        Series="{Binding ChartViewModel.Series}"/>


                    </Grid>
                </Grid>
            </Grid>
        </Grid>


        <!-- Connexion -->
        <Grid x:Name="FirstAnalyzePanel" VerticalAlignment="Stretch" Background="#FF1E1E1E">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center">

                <!-- Titre -->
                <TextBlock HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Text="WAAPI Connexion Settings"
                   FontSize="25"
                   FontWeight="SemiBold"
                   Foreground="#E0E0E0"
                   Margin="0,0,0,35"/>

                <!-- IP -->
                <StackPanel Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Spacing="15">
                    <TextBlock Text="IP Address:"
                               FontSize="16"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Foreground="#C8C8C8"
                               Margin="0,0,0,25"/>
                    <TextBox x:Name="WampIP_TextBox"
                             Width="180"
                             PlaceholderText="(ex: localhost)"
                             Text="localhost"
                             VerticalAlignment="Center"
                             Background="#3A3F4B"
                             Foreground="#F0F0F0"
                             BorderBrush="#5A5F6B"
                             Margin="0,0,0,25"/>
                </StackPanel>

                <!-- Port -->
                <StackPanel Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Spacing="15">
                    <TextBlock Text="Port:"
                               VerticalAlignment="Center"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#C8C8C8"
                               Margin="0,0,0,25"/>
                    <TextBox x:Name="WampHost_TextBox"
                            Width="220"
                            PlaceholderText="(ex: 8080)"
                            Text="8080"
                            VerticalAlignment="Center"
                            Background="#3A3F4B"
                            Foreground="#F0F0F0"
                            BorderBrush="#5A5F6B"
                            Margin="0,0,0,30"/>
                </StackPanel>

                <!-- Bouton principal -->
                <Button x:Name="AnalyzeButton"
                Content="Connect and Analyze Wwise project"
                Click="AnalyzeButton_Click"
                Width="300"
                Height="40"
                FontSize="16"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontWeight="SemiBold"
                Foreground="White"
                Background="#4086C7"
                BorderBrush="#3A77B0"
                BorderThickness="1"
                CornerRadius="12"
                Margin="0,0,0,30">
                    <Button.Resources>
                        <!-- Style hover/pressed -->
                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#4DA6FF"/>
                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#2E6CA3"/>
                    </Button.Resources>
                </Button>

                <!-- Lien -->
                <HyperlinkButton Content="Error troubleshooting" 
                         NavigateUri="https://www.audiokinetic.com/fr/public-library/2024.1.7_8863/?source=SDK&amp;id=waapi_prepare.html"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Foreground="#4DA6FF"/>
            </StackPanel>
        </Grid>



        <!-- Popup de suggestions (inchangé) -->
        <Popup x:Name="SuggestionsPopup">
            <Border Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" BorderBrush="Gray" BorderThickness="1">
                <ListBox ItemsSource="{Binding SearchSuggestions}"
                         SelectionChanged="SearchSuggestionSelected"
                         MaxHeight="200"/>
            </Border>
        </Popup>

    </Grid>
</Window>
